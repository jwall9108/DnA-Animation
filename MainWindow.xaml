<Window x:Class="Circles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DnA Animation" Height="405" Width="525">
    <Grid Background="#FF100F0F" Height="393">
        <Canvas Height="320" HorizontalAlignment="Left" Margin="12,21,0,0" Name="canvas1" VerticalAlignment="Top" Width="479">
            <Slider Canvas.Left="6" Canvas.Top="207" Height="23" Name="slider1" Width="467" TickPlacement="BottomRight" Interval="3" ValueChanged="slider1_ValueChanged" Maximum="30" IsSelectionRangeEnabled="False" Value="15" />
            <Label Canvas.Left="6" Canvas.Top="236" Content="Growth Factor" Height="28" Name="label1" Foreground="White" />
            <Slider Canvas.Left="6" Canvas.Top="270" Height="23" Interval="1" IsSelectionRangeEnabled="False" Maximum="10" Name="slider2" TickPlacement="BottomRight" Width="467" ValueChanged="slider2_ValueChanged" TickFrequency="1" SmallChange="1" IsSnapToTickEnabled="False" Value="5" />
            <Label Canvas.Left="6" Canvas.Top="292" Content="Rotation" Foreground="White" Height="28" Name="label2" />
        </Canvas>
    </Grid>
</Window>
